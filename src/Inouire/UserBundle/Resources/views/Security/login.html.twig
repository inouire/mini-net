{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

    <img src="{{asset('css/icons/persona.png')}}"/>
    <h1>
        Bienvenue !<br>
        <small>Veuillez vous authentifier</small>
    </h1>
    
    {% if error %}
        <div class="alert alert-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}

    <form role="form" action="{{ path("fos_user_security_check") }}" method="post" >
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
            <input type="text" class="form-control input-lg" id="username" name="_username" value="{{ last_username }}">
        </div>
        
        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
            <input type="password" class="form-control input-lg" id="password"  name="_password">
        </div>
        
        <div class="checkbox">
            <label>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on">
            {#{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}#}
            Rester connecté
            </label>
        </div>
 
        <input class="btn btn-inverse" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </form>
    <br>
    <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié ?</a>

{% endblock fos_user_content %}
