{% extends 'InouireMininetBundle:Default:base.html.twig' %}

{% block title %}album pour le tag {{tag}}{% endblock %}

{% block body %}

    {% include 'InouireMininetBundle:Default:tagsRibbon.html.twig' %}
    
    <hr>
    <h1 style="text-align:center">Album "{{tag}}"</h1>
    <hr>
    <div class="row">
        
        <div class="span12">
            <ul class="thumbnails">   

{% for image in image_list %}
                <li class="span2" style="text-align:center">
                    <a href="{{ path('get_image',{"image_id":image.id}) }}" class="fancybox" rel="fancybox[{{tag}}]">
                         <img src="{{ path('get_thumbnail',{"image_id":image.id}) }}" class="img-polaroid" />
                    </a>
                    <a href="{{ path('view_post',{"post_id":image.post.id}) }}"><span class="icon  icon-globe"<!--style="display:none"--></span></a>
                </li>
{% endfor %}
            
            </ul>
        </div>
   </div>
   
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">

        $(document).ready(function(){
            
            //init fancybox on all pictures, with thumb
            $(".fancybox").fancybox({
                loop: false,
                openEffect: 'fade',
                closeEffect: 'fade',
                nextEffect: 'none',
                prevEffect:'none',
                nextClick: true,
                helpers:  {
                    thumbs : {
                        width: 50,
                        height: 50
                    }
                }
            });
        });
    </script>
{% endblock %}
